<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:padding="8dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

  <ImageView
      android:id="@+id/provider_profile_img"
      android:layout_width="70dp"
      android:layout_height="70dp"
      android:layout_gravity="center"
      android:orientation="vertical"
      android:padding="5dp"
      tools:ignore="MissingConstraints"
      tools:layout_editor_absoluteX="8dp"
      tools:layout_editor_absoluteY="8dp"
      tools:src="@drawable/ic_person" />


  <TextView
      android:id="@+id/text_view_companyName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textStyle="bold"
      android:layout_marginStart="8dp"
      app:layout_constraintStart_toEndOf="@+id/provider_profile_img"
      tools:ignore="MissingConstraints"
      tools:layout_editor_absoluteY="16dp"
      tools:text="company name:" />

  <TextView
      android:id="@+id/text_view_profession"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="10dp"
      android:layout_marginTop="13dp"
      app:layout_constraintStart_toEndOf="@+id/provider_profile_img"
      app:layout_constraintTop_toBottomOf="@+id/text_view_companyName"
      tools:ignore="MissingConstraints"
      tools:text="profession: " />


</androidx.constraintlayout.widget.ConstraintLayout>