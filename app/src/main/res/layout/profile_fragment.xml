<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <RelativeLayout
        android:id="@+id/rallay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/picture_grad">

        <RelativeLayout
            android:id="@+id/imgUsr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/picture_circle_boarder"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="9dp"
                android:adjustViewBounds="true"
                android:background="@drawable/picture_circle"
                android:padding="3dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_profile_icon">


            </ImageView>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgUsr"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:padding="3dp"
            android:text="User name"
            android:textSize="32sp"
            android:textColor="@color/colorAccent" />
    </RelativeLayout>


</RelativeLayout>