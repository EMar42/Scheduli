<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="4dp"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPadding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_appointmentTitle"
                style="@style/adapterTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                tools:text="At Service With" />

            <TextView
                android:id="@+id/tv_item_appointmentDate"
                style="@style/adapterTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="2"
                android:drawableStart="@drawable/ic_date_icon_white"
                android:drawablePadding="15dp"
                tools:text="November 17" />

            <TextView
                android:id="@+id/tv_item_appointmentTime"
                style="@style/adapterTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="2"
                android:drawableStart="@drawable/ic_access_time_white"
                android:drawablePadding="15dp"
                tools:text="11:00 PM" />

            <TextView
                android:id="@+id/tv_item_appointmentContact"
                style="@style/adapterTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="2"
                android:drawableStart="@drawable/ic_local_phone_white"
                android:drawablePadding="15dp"
                tools:text="04-672222" />

            <TextView
                android:id="@+id/tv_item_appointment_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:drawableStart="@drawable/ic_appointment_location_white_24dp"
                android:drawablePadding="15dp"
                android:textAppearance="@style/adapterTextStyle"
                tools:text="Test Address" />

            <TextView
                android:id="@+id/tv_item_appointment_alarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textAppearance="@style/adapterTextStyle"
                tools:text="Alarm Reminder" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>